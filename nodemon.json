{
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "verbose": true,
    "execMap": {
      "js": "node --harmony"
    },
    "events": {
      "restart": "npm run build"
    },
    "watch": [
      "src/"
    ],
    "env": {
      "NODE_ENV": "dev"
    },
    "ext": "js,json"
  }